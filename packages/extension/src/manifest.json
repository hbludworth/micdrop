{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "description": "Send and playback audio message in Gmail.",
  "default_locale": "en",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["js/content-script.js"]
    }
  ]
}
