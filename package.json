{
  "name": "micdrop",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "start": "concurrently --kill-others-on-fail \"yarn extension\" \"yarn server\" \"yarn client\"",
    "build": "./build.sh",
    "client": "yarn workspace frontend serve",
    "server": "yarn workspace backend dev",
    "extension": "yarn workspace extension start",
    "zip-server": "cp -R .ebextensions packages/backend && cd packages/backend && zip -q -r micdrop-build.zip build dist package.json yarn.lock .ebextensions && mv micdrop-build.zip ../.."
  },
  "dependencies": {
    "concurrently": "^5.3.0"
  }
}
